<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_chat"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.ua.erent.module.core.presentation.mvp.view.ChatActivity">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include
            layout="@layout/toolbar_head"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </android.support.design.widget.AppBarLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/chat_messages_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/chat_divider"
        android:layout_below="@+id/app_bar"
        android:paddingEnd="5dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingStart="5dp" />

    <View
        android:id="@+id/chat_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_above="@+id/chat_input_wrapper"
        android:background="@color/divider" />

    <LinearLayout
        android:id="@+id/chat_input_wrapper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#f2f2f2"
        android:gravity="center_vertical"
        android:paddingBottom="@dimen/activity_vertical_pad"
        android:paddingTop="@dimen/activity_vertical_pad">

        <android.support.v7.widget.AppCompatImageButton
            android:id="@+id/chat_add_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/activity_side_pad"
            android:layout_marginLeft="@dimen/activity_side_pad"
            android:layout_marginRight="@dimen/activity_side_pad"
            android:layout_marginStart="@dimen/activity_side_pad"
            android:background="@android:color/transparent"
            android:src="@drawable/wr_ic_add_default_24dp" />

        <com.ua.erent.module.core.presentation.mvp.view.util.TypefacedEditText
            android:id="@+id/chat_input_area"
            backgroundTint="@android:color/transparent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@android:color/transparent"
            android:hint="Enter answer"
            app:customFont="Roboto-Thin" />

        <android.support.v7.widget.AppCompatImageButton
            android:id="@+id/chat_send_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/activity_side_pad"
            android:layout_marginLeft="@dimen/activity_side_pad"
            android:layout_marginRight="@dimen/activity_side_pad"
            android:layout_marginStart="@dimen/activity_side_pad"
            android:background="@android:color/transparent"
            android:src="@drawable/wr_ic_send_chat_24dp" />

    </LinearLayout>

</RelativeLayout>