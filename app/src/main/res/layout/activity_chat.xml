<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_chat"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.ua.erent.module.core.presentation.mvp.view.ChatActivity">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingEnd="7dp"
            android:paddingLeft="0dp"
            android:paddingRight="7dp"
            android:paddingStart="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="10dp"
                android:paddingTop="10dp">

                <ImageButton
                    style="@style/iconButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/activity_side_pad"
                    android:layout_marginRight="@dimen/activity_side_pad"
                    android:src="@drawable/wr_ic_back_white_24dp" />

                <com.ua.erent.module.core.presentation.mvp.view.util.MyCircleImageView
                    android:id="@+id/chat_user_avatar"
                    android:layout_width="52dp"
                    android:layout_height="52dp"
                    app:civ_border_color="#90FFFFFF"
                    app:civ_border_width="1dp"
                    app:srcCompat="@drawable/bike_test" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/activity_side_pad"
                    android:layout_marginStart="@dimen/activity_side_pad"
                    android:orientation="vertical">

                    <com.ua.erent.module.core.presentation.mvp.view.util.TypefacedTextView
                        android:id="@+id/chat_username"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="Max Oliynick"
                        android:textColor="#FFF"
                        android:textSize="17sp"
                        app:customFont="Roboto-Medium" />

                    <com.ua.erent.module.core.presentation.mvp.view.util.TypefacedTextView
                        android:id="@+id/chat_item_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="My awesome bike"
                        android:textColor="#FFF"
                        app:customFont="Roboto-Light" />

                </LinearLayout>

                <Space
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <android.support.v7.widget.ActionMenuView
                    android:id="@+id/chat_menu"
                    android:layout_width="wrap_content"
                    android:layout_height="?attr/actionBarSize" />

            </LinearLayout>

        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/chat_messages_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/chat_divider"
        android:layout_below="@+id/app_bar" />

    <View
        android:id="@+id/chat_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_above="@+id/chat_input_wrapper"
        android:background="@color/divider" />

    <LinearLayout
        android:id="@+id/chat_input_wrapper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#f2f2f2"
        android:gravity="center_vertical"
        android:paddingBottom="@dimen/activity_vertical_pad"
        android:paddingTop="@dimen/activity_vertical_pad">

        <android.support.v7.widget.AppCompatImageButton
            android:id="@+id/chat_add_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/activity_side_pad"
            android:layout_marginLeft="@dimen/activity_side_pad"
            android:layout_marginRight="@dimen/activity_side_pad"
            android:layout_marginStart="@dimen/activity_side_pad"
            android:background="@android:color/transparent"
            android:src="@drawable/wr_ic_add_default_24dp" />

        <com.ua.erent.module.core.presentation.mvp.view.util.TypefacedEditText
            android:id="@+id/chat_input_area"
            backgroundTint="@android:color/transparent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@android:color/transparent"
            android:hint="Enter answer"
            app:customFont="Roboto-Thin" />

        <android.support.v7.widget.AppCompatImageButton
            android:id="@+id/chat_send_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/activity_side_pad"
            android:layout_marginLeft="@dimen/activity_side_pad"
            android:layout_marginRight="@dimen/activity_side_pad"
            android:layout_marginStart="@dimen/activity_side_pad"
            android:background="@android:color/transparent"
            android:src="@drawable/wr_ic_send_chat_24dp" />

    </LinearLayout>

</RelativeLayout>