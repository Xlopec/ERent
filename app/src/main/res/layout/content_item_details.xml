<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.ua.erent.module.core.presentation.mvp.view.ItemDetailsActivity"
    tools:showIn="@layout/activity_item_details">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingEnd="@dimen/activity_side_pad"
        android:paddingLeft="@dimen/activity_side_pad"
        android:paddingRight="@dimen/activity_side_pad"
        android:paddingStart="@dimen/activity_side_pad">

        <LinearLayout
            android:id="@+id/item_section_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="vertical"
            android:paddingBottom="16dp">

            <com.ua.erent.module.core.presentation.mvp.view.util.TypefacedTextView
                android:id="@+id/item_section"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="@string/item_details_item_info_sub"
                app:customFont="Roboto-Bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <android.support.v7.widget.AppCompatImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_location_def_24dp" />

                <com.ua.erent.module.core.presentation.mvp.view.util.TypefacedTextView
                    android:id="@+id/item_primary_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginStart="16dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    app:customFont="Roboto-Light" />
            </LinearLayout>

            <com.ua.erent.module.core.presentation.mvp.view.util.TypefacedTextView
                android:id="@+id/item_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:ellipsize="end"
                app:customFont="Roboto-Light" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:orientation="horizontal">

                <com.ua.erent.module.core.presentation.mvp.view.util.TypefacedTextView
                    android:id="@+id/item_pub_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginStart="16dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    app:customFont="Roboto-Light" />
            </LinearLayout>

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/item_owner_section_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_section_content"
            android:layout_marginTop="15dp">

            <com.ua.erent.module.core.presentation.mvp.view.util.MyCircleImageView
                android:id="@+id/item_owner_avatar"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_centerHorizontal="true"
                android:contentDescription="@null"
                app:srcCompat="@drawable/ic_account_circle_def_24dp" />

            <com.ua.erent.module.core.presentation.mvp.view.util.TypefacedTextView
                android:id="@+id/item_owner_full_name"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_below="@+id/item_owner_avatar"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginStart="@dimen/activity_horizontal_margin"
                android:layout_marginTop="10dp"
                android:ellipsize="end"
                android:maxLines="1"
                app:customFont="Roboto-Regular" />

        </RelativeLayout>

    </RelativeLayout>

</android.support.v4.widget.NestedScrollView>
