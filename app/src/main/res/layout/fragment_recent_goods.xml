<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:showIn="@layout/activity_main">

    <com.ua.erent.module.core.presentation.mvp.view.util.TypefacedTextView
        android:id="@+id/recent_goods_last_viewed_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="10dp"
        android:text="Recently viewed"
        android:textColor="@color/accent"
        android:textSize="17sp"
        app:customFont="Roboto-Regular" />

    <HorizontalScrollView
        android:id="@+id/recent_goods_last_viewed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/recent_goods_last_viewed_title"
        android:layout_marginBottom="10dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:overScrollMode="never"
            android:scrollbars="none">

            <include layout="@layout/activity_main_good_item_mini" />

            <include layout="@layout/activity_main_good_item_mini" />

            <include layout="@layout/activity_main_good_item_mini" />

            <include layout="@layout/activity_main_good_item_mini" />

            <include layout="@layout/activity_main_good_item_mini" />

            <include layout="@layout/activity_main_good_item_mini" />

        </LinearLayout>

    </HorizontalScrollView>

    <com.ua.erent.module.core.presentation.mvp.view.util.TypefacedTextView
        android:id="@+id/recent_goods_container_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/recent_goods_last_viewed"
        android:layout_marginLeft="6dp"
        android:text="News"
        android:textColor="@color/accent"
        android:textSize="17sp"
        app:customFont="Roboto-Regular" />

    <GridView
        android:padding="10dp"
        android:id="@+id/recent_goods_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/recent_goods_container_title"
        android:horizontalSpacing="10dp"
        android:verticalSpacing="10dp" />

</RelativeLayout>