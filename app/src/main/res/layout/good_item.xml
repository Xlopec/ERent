<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_shadow_frame"
    android:paddingBottom="15dp">

    <LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFF"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            android:paddingEnd="16dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingStart="16dp">

            <com.ua.erent.module.core.presentation.mvp.view.util.MyCircleImageView
                android:id="@+id/item_user_avatar"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:layout_centerVertical="true"
                app:srcCompat="@drawable/ic_account_circle_blue_24dp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                android:layout_toEndOf="@id/item_user_avatar"
                android:layout_toRightOf="@id/item_user_avatar"
                android:orientation="vertical">

                <com.ua.erent.module.core.presentation.mvp.view.util.TypefacedTextView
                    android:id="@+id/item_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@+id/item_action_menu"
                    android:layout_toStartOf="@+id/item_action_menu"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textColor="@color/primary"
                    android:textSize="16sp"
                    app:customFont="Roboto-Regular" />

                <com.ua.erent.module.core.presentation.mvp.view.util.TypefacedTextView
                    android:id="@+id/item_sub_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/item_title"
                    android:layout_toLeftOf="@+id/item_action_menu"
                    android:layout_toStartOf="@+id/item_action_menu"
                    android:drawableLeft="@drawable/wr_ic_location_def_12dp"
                    android:drawableStart="@drawable/wr_ic_location_def_12dp"
                    android:ellipsize="end"
                    android:maxLines="2"
                    app:customFont="Roboto-Regular" />

                <android.support.v7.widget.AppCompatImageButton
                    android:id="@+id/item_action_menu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    app:srcCompat="@drawable/ic_more_vert_def_24dp" />

            </RelativeLayout>

        </RelativeLayout>

        <com.ua.erent.module.core.presentation.mvp.view.util.TypefacedTextView
            android:id="@+id/item_description"
            style="@style/TextAppearance.AppCompat.Small"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:ellipsize="end"
            android:maxLines="3"
            android:paddingEnd="16dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingStart="16dp"
            app:customFont="Roboto-Regular" />

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/item_photo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:layout_marginEnd="2dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_marginStart="2dp"
            android:adjustViewBounds="true"
            android:maxHeight="160dp"
            android:scaleType="centerCrop" />

    </LinearLayout>
</FrameLayout>