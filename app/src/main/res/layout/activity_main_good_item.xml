<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/good_photo_wrapper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/good_photo"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:background="@drawable/image_placeholder_photo"
            android:scaleType="centerCrop" />

        <com.ua.erent.module.core.presentation.mvp.view.util.TypefacedTextView
            android:id="@+id/good_title"
            style="@style/TextAppearance.AppCompat.Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="#70000000"
            android:ellipsize="end"
            android:maxLines="2"
            android:padding="5dp"
            android:text="sdfsdfsd"
            android:textColor="#FFF"
            app:customFont="Roboto-Thin" />

    </FrameLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/good_photo_wrapper"
        android:layout_margin="7dp"
        android:orientation="vertical">

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/good_details_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_centerVertical="true"
            app:srcCompat="@drawable/ic_item_black_24dp" />

        <com.ua.erent.module.core.presentation.mvp.view.util.TypefacedTextView
            android:id="@+id/good_details"
            style="@style/TextAppearance.AppCompat.Body2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_toEndOf="@id/good_details_icon"
            android:layout_toRightOf="@id/good_details_icon"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Lorem ipsum dgffgfdolot amen loefd"
            app:customFont="Roboto-Thin" />

    </RelativeLayout>

</RelativeLayout>