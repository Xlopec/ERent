<resources>

    <style name="MyTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="MyTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="LightTheme" parent="MyTheme.Light" />

    <style name="MyTheme.Base" parent="Theme.AppCompat.Light">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primaryDark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="colorButtonNormal">@color/primary</item>
        <item name="actionBarStyle">@style/Widget.AppCompat.Light.ActionBar</item>
        <item name="actionBarTheme">@style/ThemeOverlay.MyTheme.ActionBar</item>
        <item name="actionBarPopupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="toolbarStyle">@style/Widget.AppCompat.Toolbar</item>
    </style>

    <style name="MyTheme.Light" parent="MyTheme.Base">
        <item name="android:textViewStyle">@style/TextViewStyle</item>
        <item name="android:buttonStyle">@style/ButtonStyle</item>
        <item name="android:textColorHint">@color/primaryTextW</item>
        <item name="colorControlNormal">@color/primaryTextW</item>
        <item name="colorControlActivated">@color/primaryTextW</item>
        <item name="colorControlHighlight">@color/primaryTextW</item>
        <item name="android:textColor">@color/primaryTextW</item>
        <item name="android:textColorSecondary">@color/secondaryTextW</item>
        <item name="android:editTextStyle">@style/EditText.Default</item>
        <item name="editTextStyle">@style/EditText.Default</item>
    </style>

    <style name="MyTheme.Dark" parent="MyTheme.Base">
        <item name="android:textViewStyle">@style/TextViewStyle</item>
        <item name="android:buttonStyle">@style/ButtonStyle</item>
        <item name="android:textColorHint">@color/secondaryTextB</item>
        <item name="colorControlNormal">#FFF</item>
        <item name="colorControlActivated">@color/primary</item>
        <item name="colorControlHighlight">@color/primary</item>
        <item name="android:textColor">@color/primaryTextB</item>
        <item name="android:textColorSecondary">@color/secondaryTextB</item>
        <item name="android:textColorPrimary">#FFF</item>
        <item name="android:editTextStyle">@style/EditText.Default</item>
        <item name="editTextStyle">@style/EditText.Default</item>
    </style>

    <style name="ThemeOverlay.MyTheme.ActionBar" parent="ThemeOverlay.AppCompat.ActionBar">
       <!-- <item name="android:textColorPrimary">#FFF</item>
        <item name="colorControlNormal">#FFF</item>-->
    </style>

    <style name="TextViewStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="ButtonStyle" parent="android:Widget.Holo.Button">
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="CircularProgress" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@color/accent</item>
    </style>

    <style name="DefaultButton">
        <item name="android:background">@drawable/default_button</item>
        <item name="android:typeface">monospace</item>
        <item name="android:textColor">@color/primaryLight</item>/>
    </style>

    <style name="EditText.Default" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">@color/primaryTextW</item>
        <item name="android:textColorSecondary">@color/secondaryTextW</item>
        <item name="android:fontFamily">sans-serif-thin</item>
    </style>

    <style name="EditText.Light" parent="Widget.AppCompat.EditText">
        <item name="colorAccent">#FFF</item>
        <item name="colorControlNormal">#FFF</item>
        <item name="colorControlActivated">#FFF</item>
        <item name="android:textColor">#FFF</item>
        <item name="android:textColorSecondary">#FFF</item>
        <item name="android:textColorHint">#FFF</item>
        <item name="android:fontFamily">sans-serif-thin</item>
    </style>

    <style name="secondaryText" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">@color/primaryTextB</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="iconButton">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="Button.Raised" parent="Base.Widget.AppCompat.Button">
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:minHeight">@dimen/btn_raised_height</item>
        <item name="android:minWidth">@dimen/btn_raised_min_width</item>
        <item name="android:background">@drawable/raised_btn_def</item>
        <item name="android:textColor">@drawable/raised_btn_txt_col</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat</item>
    </style>

    <style name="Button.Flat" parent="Base.Widget.AppCompat.Button">
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:minHeight">@dimen/btn_flat_height</item>
        <item name="android:minWidth">@dimen/btn_flat_min_width</item>
        <item name="android:background">@drawable/flat_btn_def</item>
        <item name="android:textColor">@drawable/flat_btn_txt_col</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat</item>
    </style>

    <style name="SpinnerItem.Light" parent="android:Widget.TextView.SpinnerItem">
        <item name="android:textColor">@color/primaryTextW</item>
    </style>

    <style name="SpinnerItem.Dropdown.Light" parent="android:TextAppearance.Widget.TextView.SpinnerItem">
        <item name="android:textColor">@color/primaryTextB</item>
        <item name="android:popupBackground">@color/primaryTextW</item>
    </style>

    <style name="ShadowFrameWhite">
        <item name="android:background">@android:drawable/dialog_holo_light_frame</item>
        <!--<item name="android:padding">10dp</item>-->
    </style>

    <style name="divider">
        <item name="android:background">@color/primaryTextB</item>
        <item name="android:alpha">0.12</item>
    </style>

</resources>
